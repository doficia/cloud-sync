{
    "editor.minimap.enabled": false,
    "editor.formatOnSave": true,
    "explorer.confirmDelete": false,
    "window.zoomLevel": 0,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.extension.sortImports.quoteStyle": "double",
    "typescript.extension.sortImports.sortOnSave": true,
    "typescript.extension.sortImports.sortMethod": "path",
    "typescript.extension.sortImports.maxNamedImportsInSingleLine": 999,
    "typescript.extension.sortImports.pathSortOrder": [
        "package",
        "relativeUpLevel",
        "relativeDownLevel"
    ],
    "workbench.colorTheme": "Shades of Purple",
    "editor.fontFamily": "'Fira Code', monospace",
    "editor.fontLigatures": true,
    "editor.cursorBlinking": "smooth",
    "editor.renderWhitespace": "none",
    "editor.snippetSuggestions": "none",
    "editor.tabSize": 4,
    "editor.suggest.localityBonus": true,
    "editor.suggestSelection": "recentlyUsed",
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "workbench.editor.enablePreview": false,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "explorer.confirmDragAndDrop": false,
    "javascript.updateImportsOnFileMove.enabled": "never",
    "diffEditor.ignoreTrimWhitespace": true,
    "javascript.preferences.quoteStyle": "single"
}

